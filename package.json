{
  "name": "michaelsboost",
  "private": true,
  "version": "1.0",
  "type": "module",
  "scripts": {
    "build:css": "postcss src/style.css -o dist/style.css",
    "build:js": "esbuild src/concat.js --bundle --minify --sourcemap --format=cjs --outfile=dist/App.min.js",
    "build": "npm run build:css && npm run build:js",
    "serve": "http-server -c-1 -p 8081"
  },
  "dependencies": {
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.0.2",
    "postcss": "^8.4.38",
    "postcss-import": "^16.1.0",
    "tailwindcss": "^3.4.4"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.13",
    "esbuild": "^0.23.0"
  }
}
